{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "react-native"],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    },
    "typeRoots": ["./typings/custom/", "./node_modules/@types"]
  },
  "include": ["src/**/*", "./typings"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
