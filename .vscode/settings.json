{
  "cSpell.words": [
    "formatjs",
    "hplife",
    "mytraineecourses",
    "netinfo",
    "notifee",
    "persistor",
    "webp"
  ],
  "files.exclude": {
    "node_modules/": true,
    ".bundle": true,
    ".vscode": true,
    ".yarn": true,
    "vendor": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.configPath": "./.prettierrc.js",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.format.enable": true, // Enable ESLint as the formatter
  "eslint.lintTask.enable": true, // Enable the lint task
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
